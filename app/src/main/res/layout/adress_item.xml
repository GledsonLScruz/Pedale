<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:id="@+id/item"
    android:background="@color/white">

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location"/>

    <TextView
        android:id="@+id/name_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Rua doutor sebastiÃ£o pedrosa"
        android:layout_toEndOf="@id/location_img"/>

    <TextView
        android:id="@+id/info_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jose pinheir,campina grande - PB 58-407548, Brazil"
        android:layout_below="@id/name_adress"
        android:layout_alignLeft="@id/name_adress"/>

</RelativeLayout>